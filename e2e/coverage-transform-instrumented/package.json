{
  "jest": {
    "rootDir": "./",
    "transform": {
      "\\.(js)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(js)$",
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "/jest-environment-node/"
    ],
    "moduleFileExtensions": [
      "js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-plugin-istanbul": "^6.0.0"
  }
}
